<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>    
    <record model="ir.ui.view" id="view_templogin_form">
            <field name="name">olims.templogin.form</field>
            <field name="model">olims.templogin</field>
            <field name="arch" type="xml">
                <form string="Search" create="false" edit="false" write="false">
                        
                            <lable for="username" string="Username" />
                            <field name="username" nolabel='0' placeholder="Username"/>
                            <br/>
                            <lable for="email" string="Email" />
                            <field name="email" nolabel='0' placeholder="Email"/>
                        <br/>
                            <lable for="password" string="Password" />
                            <field name="password" nolabel='0' password="True" placeholder="Password"/>
                        
                    <footer>
                        <group col="8">
                            <button name="open_temp_login_confirm_dialog" string="Create User" type="object" class="oe_highlight" invisible="not context.get('client_user_exist')" context="{'contact_id':context.get('contact_id')}" />
                            <button name="create_temp_login" string="Create User" type="object" invisible="context.get('client_user_exist')" class="oe_highlight" context="{'contact_id':context.get('contact_id')}" />

                        </group>
                    </footer>
                </form>
        </field>
    </record>

</data>
</openerp>