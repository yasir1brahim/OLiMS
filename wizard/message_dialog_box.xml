<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_message_dialog_box" model="ir.ui.view">
            <field name="name">Cancel Analyses Request</field>
            <field name="model">olims.message_dialog_box</field>
            <field name="arch" type="xml">
                <form string="Cancel Analyses Request">
                    <p class="o_dialog_warning">
                        Are you sure! you want to cancel this?
                    </p>
                    <field name="title" invisible="1"/>
                    <footer>
                        <button name="cancel_analysis_requests" string="Ok" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_message_dialog_box" model="ir.actions.act_window">
            <field name="name">Cancel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">olims.message_dialog_box</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_message_dialog_box"/>
        </record>

        <record id="view_dialog_box_payment_not_current" model="ir.ui.view">
            <field name="name">Payment Not Current Dialog Box</field>
            <field name="model">olims.message_dialog_box</field>
            <field name="arch" type="xml">
                <form string="Cancel Analyses Request">
                    <p class="o_dialog_warning">
                       Payment Not Current for Selected Client(s)  Do you wish to continue ?</p>
                    <field name="title" invisible="1"/>
                    <footer>
                         <button name="bulk_verify_analysis_requests" invisible="context.get('do_action') in ['publish', 'send_COA_mail']"  string="Yes" type="object" class="btn-primary"/>
                         <button name="publish_analysis_request" invisible="context.get('do_action') in ['verify', 'send_COA_mail']"  string="Yes" type="object" class="btn-primary"/>
                         <button name="send_ar_COA" invisible="context.get('do_action') in ['verify', 'publish']" context="{'open_wizard': True}"  string="Yes" type="object" class="btn-primary"/>
                         <button string="No" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


         <record id="action_view_dialog_box_payment_not_current" model="ir.actions.act_window">
            <field name="name">Payment Not Current Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">olims.message_dialog_box</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_dialog_box_payment_not_current"/>
        </record>









        <record id="analysis_request_action_cancel" model="ir.actions.server">
            <field name="name">Cancel</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_olims_analysis_request"/>
            <field name="state">code</field>
            <field name="code">action = self.cancel_analysis_request_action(cr, uid, context.get('active_ids'), context=context)</field>
            <field name="sequence" eval="6"/>
        </record>

         <record model="ir.values" id="olims_analysis_request_cancel">
            <field name="model_id" ref="olims.model_olims_analysis_request" />
            <field name="name">Analyses Request</field>
            <field name="key2">client_action_multi</field>
            <field name="model">olims.analysis_request</field>
            <field eval="'ir.actions.server,%d'%analysis_request_action_cancel" name="value"/>
        </record>


        <record id="view_remove_message_dialog_box" model="ir.ui.view">
            <field name="name">Delete</field>
            <field name="model">olims.message_dialog_box</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form string="Remove Analyses">
                    <p class="o_dialog_warning">
                        Do you really want to remove these records?
                    </p>
                    <field name="title" invisible="1"/>
                    <footer>
                        <button name="unlink" string="Ok" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_delete_message_dialog_box" model="ir.ui.view">
            <field name="name">Delete</field>
            <field name="model">olims.message_dialog_box</field>
            <field name="priority" eval="3"/>
            <field name="arch" type="xml">
                <form string="Delete Analyses">
                    <p class="o_dialog_warning">
                        Do you really want to remove these records?
                    </p>
                    <field name="title" invisible="1"/>
                    <footer>
                        <button name="unlink_analyses_of_ar" string="Ok" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
