                <iframe id="moleculer-drawer-database" src="" width="700" height="450" frameborder="0" scrolling="no"></iframe>
            </div>
            <field name="attachment_ids" widget='many2many_binary'></field>
        </form>
     </field>
</record>
        <record id="database_kanban_view" model="ir.ui.view">
